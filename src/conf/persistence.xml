<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="babyplusPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.entidades.EstadoSolicitud</class>
    <class>modelo.entidades.Rol</class>
    <class>modelo.entidades.ProveedorServicio</class>
    <class>modelo.entidades.Usuario</class>
    <class>modelo.entidades.Subscripcion</class>
    <class>modelo.entidades.Servicio</class>
    <class>modelo.entidades.Mensaje</class>
    <class>modelo.entidades.Cliente</class>
    <class>modelo.entidades.EstadoCita</class>
    <class>modelo.entidades.ClienteSubscripcion</class>
    <class>modelo.entidades.Post</class>
    <class>modelo.entidades.Paciente</class>
    <class>modelo.entidades.Solicitud</class>
    <class>modelo.entidades.Proveedor</class>
    <class>modelo.entidades.Valoracion</class>
    <class>modelo.entidades.Cita</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/babyplus?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
